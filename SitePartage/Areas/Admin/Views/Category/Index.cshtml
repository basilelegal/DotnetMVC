@model IEnumerable<SitePartage.Models.Category>

@{
    ViewBag.Title = "Listes des catégories";
}

<h2>Listes des catégories</h2>

<p>
    @Html.ActionLink("Créer une catégorie", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Picture)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Picture)
        </td>
        <td>
            @Html.ActionLink("Modifier", "Edit", new { id=item.CategoryID }) |
            @Html.ActionLink("Supprimer", "Delete", new { id=item.CategoryID })
        </td>
    </tr>
}

</table>
