@model IEnumerable<SitePartage.Models.User>

@if (Request.Params["isValid"] == "Non")
{
    ViewBag.Title = "Demandes d'inscription";
    <h2>Demandes d'inscription</h2>
}
else
{
    ViewBag.Title = "Liste des membres";
    <h2>Liste des membres</h2>
}

<p>
    @Html.ActionLink("Create New", "Create")

    @using (Html.BeginForm("Index", "User", FormMethod.Get))
    {
    <p>
        Nom : @Html.TextBox("SearchString") <br />

        Validé : @Html.DropDownList("IsValid", "Tous") <br />

        <input type="submit" value="Filter" />
    </p>
}
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Civility)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NickName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NbPoint)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PostalCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.City)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Role)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Civility)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NickName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NbPoint)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PostalCode)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.City)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Role)
                </td>
                <td>
                    @if (Request.Params["isValid"] == "Non")
                    {
                        @Html.ActionLink("Refuser", "Delete", new { id = item.UserID })
                        @Html.ActionLink("Valider", "Edit", new { id = item.UserID })
                    }
                    else
                    {
                    @Html.ActionLink("Modifier", "Edit", new { id = item.UserID })
                    }

                    @Html.ActionLink("Détails", "Details", new { id = item.UserID })
                </td>
            </tr>
        }

    </table>
